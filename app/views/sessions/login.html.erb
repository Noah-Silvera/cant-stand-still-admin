
<div class="flex flex-row w-full h-screen justify-center items-center">
  <div class="flex flex-col">
    <% unless Rails.env.production? %>
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 mx-2 my-4 px-4 border border-blue-700 text-2xl rounded">
        <%= link_to "Sign in as developer", 'auth/developer', method: :get %>
      </button>
    <% end %>
    <button class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 mx-2 my-4 px-4 border border-blue-700 text-2xl rounded">
      <%= link_to "Sign in with Strava", 'auth/strava', method: :get %>
    </button>
  </div>
</div>
